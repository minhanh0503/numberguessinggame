<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <RelativeLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:background="#A600BCD4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <Button
            android:id="@+id/buttonRound1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerInParent="true"
            android:layout_marginTop="65dp"
            android:onClick="restartClickFunction"
            android:text="Restart"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/buttonRound1"
            android:layout_alignTop="@+id/buttonRound1"
            android:layout_alignEnd="@+id/buttonRound1"
            android:layout_alignBottom="@+id/buttonRound1"
            android:layout_marginStart="-122dp"
            android:layout_marginTop="-299dp"
            android:layout_marginEnd="204dp"
            android:layout_marginBottom="310dp"
            android:text="1" />

        <Button
            android:id="@+id/buttonView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/buttonRound1"
            android:layout_alignTop="@+id/buttonRound1"
            android:layout_alignEnd="@+id/buttonRound1"
            android:layout_alignBottom="@+id/buttonRound1"
            android:layout_marginStart="-39dp"
            android:layout_marginTop="-299dp"
            android:layout_marginEnd="119dp"
            android:layout_marginBottom="310dp"
            android:text="2" />

        <Button
            android:id="@+id/buttonView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/buttonRound1"
            android:layout_alignTop="@+id/buttonRound1"
            android:layout_alignEnd="@+id/buttonRound1"
            android:layout_alignBottom="@+id/buttonRound1"
            android:layout_marginStart="39dp"
            android:layout_marginTop="-299dp"
            android:layout_marginEnd="42dp"
            android:layout_marginBottom="310dp"
            android:text="3" />

        <Button
            android:id="@+id/buttonView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/buttonRound1"
            android:layout_alignTop="@+id/buttonRound1"
            android:layout_alignEnd="@+id/buttonRound1"
            android:layout_alignBottom="@+id/buttonRound1"
            android:layout_marginStart="116dp"
            android:layout_marginTop="-299dp"
            android:layout_marginEnd="-36dp"
            android:layout_marginBottom="310dp"
            android:text="4" />

        <Button
            android:id="@+id/buttonView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/buttonRound1"
            android:layout_alignTop="@+id/buttonRound1"
            android:layout_alignEnd="@+id/buttonRound1"
            android:layout_alignBottom="@+id/buttonRound1"
            android:layout_marginStart="192dp"
            android:layout_marginTop="-299dp"
            android:layout_marginEnd="-113dp"
            android:layout_marginBottom="310dp"
            android:text="5" />


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/buttonRound1"
            android:layout_alignBottom="@+id/buttonRound1"
            android:layout_marginEnd="-87dp"
            android:layout_marginBottom="-43dp"
            android:fontFamily="sans-serif-black"
            android:text="Press the RESTART button to restart game"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="119dp"
            android:layout_marginTop="458dp"
            android:layout_marginEnd="120dp"
            android:layout_marginBottom="207dp"
            android:fontFamily="@font/abril_fatface"
            android:gravity="center"
            android:text="Round 1"
            android:textAllCaps="true"
            android:textColor="#000000"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/attempts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="154dp"
            android:layout_marginEnd="156dp"
            android:layout_marginBottom="434dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Attempts: 3"
            android:textSize="20sp" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>